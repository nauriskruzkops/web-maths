{
  "compileOnSave": true,
  "compilerOptions": {
    "rootDir": "./assets/typescript/",
    "outDir": "./public/assets/",
    "strict": true,
    "sourceMap": true,
    "removeComments": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "module": "es6",
    "target": "es6",
    "moduleResolution": "Node",
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true
  },
  "include": [
    "./assets/typescript"
  ]
}
